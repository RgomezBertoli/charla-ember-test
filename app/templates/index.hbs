<h1 data-id="header-login">LOGIN</h1>
{{#if showError}}
  <article class="error">
    <p data-id="error-msg">{{error.msg}}</p>
  </article>
{{/if}}
<form data-id="login-form">
  <label data-id="label-name" for="username">Usuario</label>
  {{input id="user-name" name="username" type="text" value=username}}
  <label data-id="label-pass" for="password">Contrase√±a</label>
  {{input id="user-pass" name="password" type="password" value=password}}
  <button data-id="btn-accept" {{action "login" username password}}>Entrar</button>
</form>